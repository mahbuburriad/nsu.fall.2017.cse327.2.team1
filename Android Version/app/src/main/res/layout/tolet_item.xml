<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"

        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:layout_margin="2dp"
                android:id="@+id/roomImageViewToLet"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Furnished Appartment in Gulshan"
                android:singleLine="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/toletTitle"
                android:textColor="@color/colorAsphaltLight"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/roomImageViewToLet"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent : 70000 BDT"
                android:singleLine="true"
                android:id="@+id/rentTextView"
               android:layout_margin="10dp"
                android:textColor="@color/sweetPink"
                android:layout_alignParentEnd="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/toletTitle"

                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:id="@+id/rattigTolet"
                android:foregroundGravity="left"
                android:layout_below="@+id/toletTitle" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:id="@+id/favoriteImage"
                android:src="@drawable/ic_favorite_black_24dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>